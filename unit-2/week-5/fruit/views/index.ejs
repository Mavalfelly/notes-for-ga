<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>
<body>
    <%- include('./partials/header.ejs')%>

    <main>
        <div>

            <a href="/fruit/new"><button>New Fruit</button></a>
            <% for (fruit of fruits){%>
                <article>
                    <a href="/fruit/<%=fruit._id%>">
                        <h2>
                            <%=fruit.name%> - <%= fruit.readyToEat ? "Ripe" : "Not Ripe" %>
                        </h2>
                    </a>
                </article>
            <%}%>
        </div>
    </main>
</body>
</html>